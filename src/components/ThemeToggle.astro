---
import { Icon } from 'astro-icon/components';
---

<button
  id="theme-toggle"
  type="button"
  class="inline-flex h-9 w-9 items-center justify-center rounded-md border border-input bg-background hover:bg-accent hover:text-accent-foreground transition-colors"
  aria-label="Toggle theme"
>
  <Icon
    name="lucide:sun"
    class="h-4 w-4 rotate-0 scale-100 transition-all dark:-rotate-90 dark:scale-0 block dark:hidden"
  />
  <Icon
    name="lucide:moon"
    class="h-4 w-4 rotate-90 scale-0 transition-all dark:rotate-0 dark:scale-100 hidden dark:block"
  />
  <span class="sr-only">Toggle theme</span>
</button>
